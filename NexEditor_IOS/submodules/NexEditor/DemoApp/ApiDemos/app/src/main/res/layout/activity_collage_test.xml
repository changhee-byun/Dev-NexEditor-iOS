<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:gravity="bottom">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.7"
        android:orientation="vertical"
        android:gravity="center">

        <RelativeLayout
            android:id="@+id/holder_engineview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.nexstreaming.nexeditorsdk.nexEngineView
                android:id="@+id/engineview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"/>
            <FrameLayout
                android:id="@+id/holder_overlay"
                android:layout_width="0dip"
                android:layout_height="0dip"
                android:layout_alignLeft="@+id/engineview"
                android:layout_alignTop="@+id/engineview"
                android:layout_alignRight="@+id/engineview"
                android:layout_alignBottom="@+id/engineview"/>

            <ImageView
                android:id="@+id/imageViewChecker"
                android:visibility="invisible"
                android:layout_width="0dip"
                android:layout_height="0dip"
                android:layout_margin="50dip"
                android:layout_alignLeft="@+id/engineview"
                android:layout_alignTop="@+id/engineview"
                android:layout_alignRight="@+id/engineview"
                android:layout_alignBottom="@+id/engineview"/>

        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dip">
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/layout_draw"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility="gone"
                android:gravity="center">
                <Button
                    android:id="@+id/btnDrawChange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/collage_change"/>
                <Button
                    android:id="@+id/btnDrawFilter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/collage_filter"/>
                <Button
                    android:id="@+id/btnDrawMove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/collage_move"/>
                <Button
                    android:id="@+id/btnDrawScale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/collage_scale"/>
                <Button
                    android:id="@+id/btnDrawRotate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/collage_rotate"/>
                <Button
                    android:id="@+id/btnDrawFlip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/collage_flip"/>
                <Button
                    android:id="@+id/btnDrawHide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/collage_hide"/>
                <Button
                    android:id="@+id/btnDrawSwap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/collage_swap"/>
            </LinearLayout>
        </HorizontalScrollView>
        <EditText
            android:id="@+id/title_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.3">

        <ListView
            android:id="@+id/listview_collage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ListView
            android:id="@+id/listview_filter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnExportJpeg"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:text="@string/collage_export_jpeg"/>
        <Button
            android:id="@+id/btnExportMp4"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:text="@string/collage_export_mp4"/>
        <Button
            android:id="@+id/btnStore"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:text="@string/Store"/>
        <Button
            android:id="@+id/btnSet"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:text="@string/Set"/>
        <Button
            android:id="@+id/btnSave"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:text="Save"/>

    </LinearLayout>
</LinearLayout>
