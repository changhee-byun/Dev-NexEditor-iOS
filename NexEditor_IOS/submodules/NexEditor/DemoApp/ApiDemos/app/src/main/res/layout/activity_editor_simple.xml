<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center">

        <Switch
            android:text="Auto Aspect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switch_auto_aspect"
            android:layout_weight="1"
            android:checked="true"
            />

        <Switch
            android:text="Deny FeaturedList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switch_deny_featuredlist"
            android:layout_weight="1"
            android:checked="false"
            />

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center">

        <Switch
            android:text="LocalAsset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switch_asset_type"
            android:layout_weight="1" />

        <TextView
            android:text="Vendor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_vender"
            android:layout_weight="1" />

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        >
        <TextView
            android:text="Server Type:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <RadioGroup
            android:id="@+id/radioGroup_server"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <RadioButton
            android:text="Drift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton_server_drift"
            android:layout_weight="1" />

        <RadioButton
            android:text="Staging"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton_server_staging"
            android:layout_weight="1" />

        <RadioButton
            android:text="Product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton_server_production"
            android:checked="true"
            android:layout_weight="1" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        >
        <TextView
            android:text="Category:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        <CheckBox
            android:text="Template"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox_c_template"
            android:layout_weight="1"
            android:checked="true" />

        <CheckBox
            android:text="Beat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox_c_beat"
            android:layout_weight="1"
            android:checked="true" />

        <CheckBox
            android:text="Audio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox_c_audio"
            android:layout_weight="1"
            android:checked="true" />

        <CheckBox
            android:text="TitleEffect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox_c_title"
            android:layout_weight="1"
            android:checked="true" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        >
        <CheckBox
            android:text="Collage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox_c_collage"
            android:layout_weight="1"
            android:checked="false" />

        <CheckBox
            android:text="Static Collage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox_c_staticcalloage"
            android:layout_weight="1"
            android:checked="true" />

        <CheckBox
            android:text="Dynamic Collage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox_c_dynamiccollage"
            android:layout_weight="1"
            android:checked="true" />

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        >
        <TextView
            android:text="MarketId:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="default2"
            android:ems="10"
            android:id="@+id/editText_marketid"
            android:layout_weight="1" />


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        >

    <Button
        android:text="Start Test"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_pickup" />
    </LinearLayout>
</LinearLayout>
