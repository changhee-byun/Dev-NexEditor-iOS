<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="0dp"
        android:orientation="horizontal"
        android:background ="#000000"
        android:layout_weight="0.5"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Max Codec Count : " />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:id="@+id/spinner_max" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent" android:layout_height="0dp"
        android:orientation="horizontal"
        android:background ="#000000"
        android:layout_weight="0.5"
        android:layout_marginTop="20dp">
        <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/encTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Encoder"
                />
            <RadioButton
                android:id="@+id/enc720p"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="720P" />

            <RadioButton
                android:id="@+id/enc1080p"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1080P" />

            <RadioButton
                android:id="@+id/enc3840p"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3840p" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="0dp"
        android:orientation="horizontal"
        android:background ="#000000"
        android:layout_weight="0.5"
        android:layout_marginTop="20dp">
        <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/decTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Decoder"
                />
            <RadioButton
                android:id="@+id/dec720p"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="720P" />

            <RadioButton
                android:id="@+id/dec1080p"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1080P" />

            <RadioButton
                android:id="@+id/dec3840p"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3840p" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="0.5"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/button_start"
            android:layout_width="0dp" android:layout_height="match_parent"
            android:layout_gravity="center" android:layout_weight=".5"
            android:text="START"/>

        <Button
            android:id="@+id/button_stop"
            android:layout_width="0dp" android:layout_height="match_parent"
            android:layout_gravity="center" android:layout_weight=".5"
            android:text="STOP"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="0dp"
        android:orientation="vertical" android:layout_weight="4">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:text="Copy test"
                android:layout_width="191dp"
                android:layout_height="wrap_content"
                android:id="@+id/button_access" />

            <ProgressBar
                android:id="@+id/progressbar"
                style="?android:attr/progressBarStyleSmallInverse"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:visibility="invisible" />
        </FrameLayout>

        <TextView
            android:id="@+id/textview"
            android:layout_width="match_parent" android:layout_height="0dp"
            android:layout_weight="2"/>
    </LinearLayout>
</LinearLayout>