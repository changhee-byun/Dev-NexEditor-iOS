<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/statusBackground"
    tools:context="com.nexstreaming.editordemo.activity.kmEditPreviewActivity">

    <FrameLayout
        android:id="@+id/fragment_preview"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:background="@android:color/black">

        <FrameLayout
            android:id="@+id/surface"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent" android:layout_height="56dp"
            android:background="@android:color/transparent">
            <FrameLayout
                android:layout_width="40dp" android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/preview_back"
                    android:layout_width="24dp" android:layout_height="24dp"
                    android:layout_gravity="center_vertical|right" android:scaleType="fitCenter"
                    android:src="@mipmap/ic_arrow_back_white_24dp"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"
                android:paddingLeft="32dp" android:layout_gravity="center_vertical"/>

            <FrameLayout
                android:layout_width="40dp" android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/preview_etc"
                    android:layout_width="24dp" android:layout_height="24dp"
                    android:layout_gravity="center_vertical|left" android:scaleType="fitCenter"/>
            </FrameLayout>
        </LinearLayout>

        <ImageButton
            android:id="@+id/preview_play"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_gravity="center" android:scaleType="center"
            android:background="@android:color/transparent"/>

        <LinearLayout
            android:layout_width="match_parent" android:layout_height="30dp"
            android:background="#4d000000" android:orientation="horizontal" android:layout_gravity="bottom">
            <FrameLayout android:layout_width="8dp" android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/preview_playingTime"
                android:layout_width="wrap_content" android:layout_height="match_parent"
                android:gravity="left|center" android:text="00:00" style="@style/Appl.Text4.Style"/>
            <FrameLayout android:layout_width="8dp" android:layout_height="match_parent"/>
            <SeekBar
                android:id="@+id/preview_seek"
                android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
                android:layout_gravity="center" style="@style/SeekBarStyle"/>
            <FrameLayout android:layout_width="8dp" android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/preview_TotalTime"
                android:layout_width="wrap_content" android:layout_height="match_parent"
                android:gravity="right|center" android:text="00:00" style="@style/Appl.Text4.Style"/>
            <FrameLayout android:layout_width="8dp" android:layout_height="match_parent"/>
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent" android:layout_height="80dp"
        android:background="@color/appBackground">

        <android.support.v7.widget.RecyclerView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="72dp" android:orientation="horizontal"
        android:background="@color/editBackground">

        <LinearLayout android:layout_width="72dp"
            android:layout_height="match_parent" android:gravity="center_vertical|center"
            android:paddingLeft="16dp" android:paddingRight="16dp"
            android:paddingTop="8dp" android:paddingBottom="8dp">

            <com.nexstreaming.editordemo.widget.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/editor_albumart"
                android:layout_width="40dp" android:layout_height="40dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent" android:layout_height="5dp"/>

            <TextView
                android:id="@+id/editor_albumtitle"
                android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"
                android:singleLine="true" style="@style/Appl.Text4.Style" android:gravity="bottom"/>

            <TextView
                android:id="@+id/editor_albumartist"
                android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight=".8"
                android:singleLine="true" style="@style/Appl.Text8.Style" android:gravity="center_vertical"/>

            <FrameLayout
                android:layout_width="match_parent" android:layout_height="5dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/editor_albumduration"
            android:layout_width="0dp" android:layout_height="match_parent"
            android:layout_weight=".3" android:gravity="center" style="@style/Appl.Text8.Style"/>

        <ImageButton
            android:id="@+id/goto_music"
            android:layout_width="24dp" android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:background="@color/colorPrimary"
            android:src="@mipmap/ic_add_white_24dp"/>

        <FrameLayout
            android:layout_width="16dp" android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/appBackground">

        <LinearLayout
            android:layout_width="match_parent" android:layout_height="48dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp" android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@color/timelineBackground">

                <ImageButton
                    android:id="@+id/texteffect"
                    android:layout_width="match_parent" android:layout_height="0dp"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:background="@color/timelineBackground"
                    android:src="@drawable/texteffect"/>

                <FrameLayout
                    android:id="@+id/texteffect_select"
                    android:layout_width="match_parent" android:layout_height="2dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp" android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@color/timelineBackground">

                <ImageButton
                    android:id="@+id/coloreffect"
                    android:layout_width="match_parent" android:layout_height="0dp"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:background="@color/timelineBackground"
                    android:src="@drawable/color"/>

                <FrameLayout
                    android:id="@+id/coloreffect_select"
                    android:layout_width="match_parent" android:layout_height="2dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp" android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@color/timelineBackground">

                <ImageButton
                    android:id="@+id/adjustmentffect"
                    android:layout_width="match_parent" android:layout_height="0dp"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:background="@color/timelineBackground"
                    android:src="@drawable/adjustment"/>

                <FrameLayout
                    android:id="@+id/adjustmentffect_select"
                    android:layout_width="match_parent" android:layout_height="2dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp" android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@color/timelineBackground">

                <ImageButton
                    android:id="@+id/stickerffect"
                    android:layout_width="match_parent" android:layout_height="0dp"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:background="@color/timelineBackground"
                    android:src="@drawable/sticker"/>

                <FrameLayout
                    android:id="@+id/stickerffect_select"
                    android:layout_width="match_parent" android:layout_height="2dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp" android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@color/timelineBackground">

                <ImageButton
                    android:id="@+id/speedeffect"
                    android:layout_width="match_parent" android:layout_height="0dp"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:background="@color/timelineBackground"
                    android:src="@drawable/speedcontrol"/>

                <FrameLayout
                    android:id="@+id/speedeffect_select"
                    android:layout_width="match_parent" android:layout_height="2dp"/>

            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent" android:layout_height="0dp"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>