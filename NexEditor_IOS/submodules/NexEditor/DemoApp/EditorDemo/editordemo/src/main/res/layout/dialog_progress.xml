<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="70dp"
    android:orientation="vertical" android:background="@color/appBackground">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="24dp"
        android:orientation="horizontal">
       
        <ImageView
            android:id="@+id/iv_encoding_progress"
            android:layout_width="24dp" android:layout_height="match_parent"
            android:layout_marginLeft="10dp" android:scaleType="fitCenter"/>
        
        <TextView
            android:id="@+id/tv_filename"
            android:layout_width="match_parent" android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center|left"
            style="@style/Appl.Text9.Style"/>
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent" android:layout_height="36dp"
        android:orientation="horizontal">
    
        <ProgressBar
            android:id="@+id/pbar_encoding"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
            android:layout_gravity="center" style="@style/ProgressBarStyle"/>
        
    </LinearLayout>
</LinearLayout>
