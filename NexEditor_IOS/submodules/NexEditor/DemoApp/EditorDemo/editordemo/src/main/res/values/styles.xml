<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="NoActionBar.Theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="NoActionBar2.Theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorControlNormal">@color/colorControlNormal</item>
        <item name="android:textColorPrimary">@color/textColorNormal</item>
    </style>

    <style name="ActionBar.StatusBar.Theme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorControlNormal">@color/colorControlNormal</item>
        <item name="android:textColorPrimary">@color/textColorNormal</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="Appl.Text.Style" parent="@android:style/Widget.TextView">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <!-- Intro Button -->
    <style name="Appl.Text2.Style" parent="@android:style/Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@drawable/button_text</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Intro version -->
    <style name="Appl.Text3.Style" parent="@android:style/Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textSize">10dp</item>
        <item name="android:textColor">@color/normalText</item>
    </style>

    <style name="Appl.Text4.Style" parent="@android:style/Widget.TextView">
        <item name="android:gravity">center|left</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="colorControlNormal">@color/textColorNormal</item>
        <item name="android:textColor">@color/textColorNormal</item>
    </style>

    <style name="Appl.Text5.Style" parent="@android:style/Widget.TextView">
        <item name="android:gravity">center|left</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/textColorHeader</item>
    </style>

    <style name="Appl.Text6.Style" parent="@android:style/Widget.TextView">
        <item name="android:gravity">center|left</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="colorControlNormal">@color/textColorNormal2</item>
        <item name="android:textColor">@color/textColorNormal2</item>
    </style>

    <style name="Appl.Text7.Style" parent="@android:style/Widget.TextView">
        <item name="android:gravity">center|left</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="colorControlNormal">@color/textColorNormal3</item>
        <item name="android:textColor">@color/textColorNormal3</item>
    </style>

    <style name="Appl.Text8.Style" parent="@android:style/Widget.TextView">
        <item name="android:gravity">center|left</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="colorControlNormal">@color/textColorNomal14</item>
        <item name="android:textColor">@color/textColorNomal14</item>
    </style>

    <style name="Appl.Text9.Style" parent="@android:style/Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="colorControlNormal">@color/textColorNormal</item>
        <item name="android:textColor">@color/textColorNormal</item>
    </style>

    <style name="Appl.Text10.Style" parent="@android:style/Widget.TextView">
        <item name="android:gravity">center|left</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="colorControlNormal">@color/textColorNormal</item>
        <item name="android:textColor">@color/textColorNormal</item>
    </style>

    <style name="Appl.Text11.Style" parent="@android:style/Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="colorControlNormal">@color/textColorNormal</item>
        <item name="android:textColor">@color/textColorNormal</item>
    </style>

    <style name="ProgressBarStyle" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:maxHeight">2dp</item>
        <item name="android:minHeight">2dp</item>
        <item name="android:progressDrawable">@drawable/progress_horizontal_mod</item>
    </style>

    <style name="SeekBarStyle">
        <item name="android:maxHeight">2dp</item>
        <item name="android:minHeight">2dp</item>
        <item name="android:focusable">true</item>
        <item name="android:progressDrawable">@drawable/progress_horizontal_mod</item>
        <item name="android:thumb">@drawable/thumb</item>
    </style>

    <style name="SeekBarStyle2">
        <item name="android:maxHeight">2dp</item>
        <item name="android:minHeight">2dp</item>
        <item name="android:focusable">true</item>
        <item name="android:progressDrawable">@drawable/progress_horizontal_mod2</item>
        <item name="android:thumb">@drawable/thumb</item>
    </style>

</resources>
