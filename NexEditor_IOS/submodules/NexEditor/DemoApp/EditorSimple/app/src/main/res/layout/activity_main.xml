<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Test"
        android:id="@+id/button_pickup"
        android:layout_marginTop="49dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_pickup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="91dp"
        android:id="@+id/spinner_vender" />

    <Switch
        android:text="LocalAssetStore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch1"
        android:layout_below="@+id/button_pickup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />

    <TextView
        android:text="Vendor :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/spinner_vender"
        android:layout_toStartOf="@+id/spinner_vender" />

    <RadioGroup
        android:id="@+id/radioGroup_server"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/spinner_vender"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp">

    <RadioButton
        android:text="Drift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:id="@+id/radioButton_server_drift" />

    <RadioButton
        android:text="Staging"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/radioButton_server_staging"
        android:layout_alignParentEnd="true"
        android:id="@+id/radioButton_server_staging" />

    <RadioButton
        android:text="Product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton_server_production"
        android:layout_alignBaseline="@+id/radioButton_server_drift"
        android:layout_alignBottom="@+id/radioButton_server_drift"
        android:layout_alignStart="@+id/button_pickup"
        android:checked="true" />
    </RadioGroup>
</RelativeLayout>
