<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AssetDetailActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/actionbar_height"
            app:theme="@style/AppTheme">
            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/darkGray"
                android:textStyle="bold"
                android:textSize="@dimen/actionbar_title_size"
                android:layout_gravity="center"/>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/sv_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/actionbar_height">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <FrameLayout
                android:id="@+id/layout_detail_main_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <VideoView
                    android:id="@+id/video_detail_main"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:id="@+id/iv_detail_main_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"/>

                <ImageView
                    android:id="@+id/iv_detail_play"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:src="@drawable/selector_play_button"
                    android:visibility="gone"/>

                <ProgressBar
                    android:id="@+id/pb_detail_video"
                    android:layout_width="@dimen/loading_view_size"
                    android:layout_height="@dimen/loading_view_size"
                    android:layout_gravity="center"
                    android:visibility="gone"/>

            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/asset_list_item_horizontal_padding"
                android:paddingLeft="@dimen/asset_list_item_horizontal_padding"
                android:paddingRight="@dimen/asset_list_item_horizontal_padding"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_detail_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textSize="16dp"
                    android:textColor="@color/darkGray"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_detail_category"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:textSize="13dp"
                        android:textColor="@color/primaryGray"/>

                    <TextView
                        android:id="@+id/tv_detail_file_size"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:textSize="13dp"
                        android:textColor="@color/primaryGray"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/asset_list_item_horizontal_padding"
                    android:layout_marginBottom="@dimen/asset_list_item_horizontal_padding">
                    <Button
                        android:id="@+id/btn_detail_action"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="10dp"
                        android:textColor="@android:color/white"
                        android:background="@drawable/selector_common_button"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:gravity="center"
                        android:visibility="invisible"
                        android:text="@string/download" />

                    <RelativeLayout
                        android:id="@+id/layout_detail_download"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="invisible">
                        <TextView
                            android:id="@+id/tv_detail_download_percent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:layout_centerHorizontal="true"
                            android:textSize="8dp"/>

                        <ImageView
                            android:id="@+id/iv_detail_download_cancel"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_below="@id/tv_detail_download_percent"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/item_download_cancel"/>

                        <ProgressBar
                            android:id="@+id/pb_detail_download"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_marginRight="5dp"
                            android:layout_below="@id/tv_detail_download_percent"
                            android:layout_toLeftOf="@id/iv_detail_download_cancel"
                            style="@style/DownloadProgrssBar"/>
                    </RelativeLayout>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/dimGray"
                    android:layout_marginTop="@dimen/asset_list_item_vertical_padding"
                    android:layout_marginBottom="@dimen/asset_list_item_vertical_padding"/>

                <TextView
                    android:id="@+id/tv_detail_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/darkGray"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_detail_images"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/asset_list_item_vertical_padding"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <include android:id="@+id/layout_detail_network_error"
        layout="@layout/include_network_error"
        android:visibility="gone"/>

    <ProgressBar
        android:id="@+id/pb_detail"
        android:layout_width="@dimen/loading_view_size"
        android:layout_height="@dimen/loading_view_size"
        android:layout_gravity="center"/>

</android.support.design.widget.CoordinatorLayout>
