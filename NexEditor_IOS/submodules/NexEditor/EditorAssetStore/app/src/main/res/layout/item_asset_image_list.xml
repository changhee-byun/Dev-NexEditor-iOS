<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layout_item_asset_image_list"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="@dimen/asset_list_item_vertical_padding"
        android:layout_marginBottom="@dimen/asset_list_item_vertical_padding">
        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/iv_item_asset_image_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>
    </RelativeLayout>
</RelativeLayout>