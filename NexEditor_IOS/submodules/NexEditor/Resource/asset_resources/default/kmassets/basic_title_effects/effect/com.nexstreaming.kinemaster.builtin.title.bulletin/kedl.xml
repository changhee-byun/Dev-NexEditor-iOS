<effect categorytitle="@string/category_basic_title" icon="fx_bulletin.0535d27612f020cbae3df9d2fa5fc9081a8278d9.png" id="com.nexstreaming.kinemaster.builtin.title.bulletin" intime="1000" intimefirst="1000" maxtitleduration="8000" name="@string/fx_bulletin" outtime="1000" repeat="no" type="title">

<userfield id="f_text" type="text">
<fieldlabel locale="en" value="@string/userfld_title_text" />
</userfield>

<texture id="videoframe" video="1" />

<userfield default="#FF0000" id="f_color_fl" type="color">
<fieldlabel locale="en" value="@string/userfld_first_letter" />
</userfield>
	
<userfield default="#FFFFFF" id="f_color_text" type="color">
<fieldlabel locale="en" value="@string/userfld_text_color" />
</userfield>

<texture fill="true" fillcolor="@f_color_fl" height="150" id="title_text_s" maxlines="1" shadow="true" shadowcolor="0 0 0 0.75" shadowoffset="2 2" shadowradius="8" srcfield="@f_text" text="%s1" textalign="right" textmargin="12" textsize="150" typeface="asset:bevan.ttf" userfield="@f_text" width="150" />
	
<texture fill="true" fillcolor="@f_color_text" height="150" id="title_text_e" maxlines="1" shadow="true" shadowcolor="0 0 0 0.75" shadowoffset="2 2" shadowradius="8" srcfield="@f_text" text="%!s1" textalign="left" textmargin="12" textsize="150" typeface="asset:bevan.ttf" width="640" />
	
<rect bounds="-1 1 1 -1" texture="@videoframe" />
	
<animatedvalue id="fade">
<part type="in"><keyframe value="0" /><keyframe value="1" /></part>
<part type="mid"><keyframe value="1" /></part>
<part type="out"><keyframe value="1" /><keyframe value="0" /></part>
</animatedvalue>
	
	
<animatedvalue id="slide">
<part type="in"><keyframe value="50" /><keyframe value="0" /></part>
<part type="mid"><keyframe value="0" /></part>
<part type="out"><keyframe value="0" /><keyframe value="-50" /></part>
</animatedvalue>
	
	
<projection aspect="1.77777" far="40" fov="45" near="1" top="1" type="perspective">
<translate offset="0 0 -21.69">
<scale uniform="0.025">
<translate offset="-250 0">
<style alpha="@fade">
<translate offset="0 @slide">
<rect anchor="left center" height="110" location="-12 0" scalemode="fit" texture="@title_text_e" width="630" />
</translate>
<translate offset="0 @slide*-1">
<rect anchor="right center" height="150" location="12 0" scalemode="fit" texture="@title_text_s" width="150" />
</translate>
</style>
</translate>
</scale>
</translate>
</projection>
	
</effect>