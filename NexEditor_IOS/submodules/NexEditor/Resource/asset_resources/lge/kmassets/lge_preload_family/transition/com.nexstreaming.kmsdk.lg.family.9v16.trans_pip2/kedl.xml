<effect 
	id="com.nexstreaming.kmsdk.lg.family.9v16.piptrans2"
	type="transition" 
	minduration="500" 
	maxduration="10000" 
	effectoffset="100" 
	effectoverlap="100"
	cycleTime="800"
	name="Family PIP2 9v16">

  <texture id="video1" video="1" />
  <texture id="video2" video="2" />
  
  <animatedvalue id="slide" scope="whole">
    <keyframe value="20 0" />
    <keyframe value="-30 0" />
  </animatedvalue>

  <animatedvalue id="move" scope="whole" timingfunction="linear">
    <keyframe value="468" />
    <keyframe value="350" />
  </animatedvalue>

  <animatedvalue id="vscale" scope="whole" timingfunction="linear">
    <keyframe value="1.3" />
    <keyframe value="3" />
    <keyframe value="2" />
  </animatedvalue>
	
	<animatedvalue id="t" scope="whole" timingfunction="linear">
		<keyframe value="0" />
		<keyframe value="20" />
	</animatedvalue>
	
	<function id="glowfunc" type="simplexfractal" outputbias="0.4" outputscale="0.4" octaves="1" />
	<function id="glowfuncb" type="simplexfractal" outputbias="0.6" outputscale="0.6" octaves="1" />
	<function id="glowfuncc" type="simplexfractal" outputbias="0.6" outputscale="0.6" octaves="7" />



  <animatedvalue id="mask_slide" scope="whole">
    <keyframe time="0" value="-360 360" />
    <keyframe time="0.15" value="120 360" />
    <keyframe time="0.85" value="120 360" />
    <keyframe time="1" value="640 360" />
  </animatedvalue>


  <animatedvalue id="vid1_slide" scope="whole">
    <keyframe time="0" value="640 360" />
    <keyframe time="0.2" value="720 360" />
    <keyframe time="0.85" value="720 360" />
    <keyframe time="1" value="1280 360" />
  </animatedvalue>


  <animatedvalue id="vid2_slide" scope="whole">
    <keyframe time="0" value="-360 360" />
    <keyframe time="0.15" value="360 360" />
    <keyframe time="0.85" value="360 360" />
    <keyframe time="1" value="640 360" />
  </animatedvalue>
 
  <animatedvalue id="vscale" scope="whole" timingfunction="linear">
    <keyframe time="0" value="2" />
    <keyframe time="0.15" value="1.4" />
    <keyframe time="0.85" value="1.4" />
    <keyframe time="1" value="1" />    
  </animatedvalue>


  <texture id="tex_mask" src="mask_gradient_c.png" />

  <animatedvalue id="slide">
    <keyframe time="0" value="0 2" />
    <keyframe time="0.05" value="0 0" />
    <keyframe time="0.95" value="0 0" />
    <keyframe time="1" value="0 -2" />
  </animatedvalue>

  <projection type="perspective" fov="45" aspect="0.5625" near="0.01" far="60000">
    <scale y="-1">
      <translate offset="-360 -640 -1546.666667">
    		<translate offset="360 640">
        <rect bounds="-360 -640 360 640" texture="@video2" />
          <translate maskoffset="@slide">
            <translate maskoffset="0.5 0.5">
              <scale type="mask" x="0" y="2">
                <translate maskoffset="-0.5 -0.5">
                  <rect bounds="-360 -640 360 640" texture="@video1" mask="@tex_mask" />
                </translate>
              </scale>
            </translate>
          </translate>
        </translate>
      </translate>
    </scale>
	</projection>  
	
</effect>
