<effect 
	id="com.nexstreaming.kmsdk.lg.love.filter_bnw_sunny"
	type="title" 
	repeat="yes"
	intime="1600" 
	intimefirst="1600"
	outtime="800" 
	outtimelast="800"
	cycleTime="800"
	name="Love Vignette BNW Sunny">

    <texture id="video1" video="1"/>

    <animatedvalue id="video_alpha" scope="whole" timingfuntion="linear">
    	<keyframe time="0" value="0"/>
    	<keyframe time="0.6" value="1"/>
    	<keyframe time="1" value="1"/>
    </animatedvalue>
	<projection type="perspective" fov="45" aspect="1.777777" near="0.01" far="60000">
		<scale y="-1">
			<translate offset="-640 -360 -870">
				<translate offset="640 360">
					<style brightness="0.15" contrast="-0.1" saturation="-1">
						<rect bounds="-640 -360 640 360" texture="@video1" />
					</style>
				</translate>

				<translate offset="640 360">
					<style alpha="@video_alpha">
						<rect bounds="-640 -360 640 360" texture="@video1" />
					</style>
				</translate>

				<translate offset="640 360">
		    	    <style compmode="multiply">
		        		<rect bounds="-640 -360 640 360" color="#ffe7b8" />
					</style>
				</translate>
			</translate>
		</scale>
	</projection>

</effect>