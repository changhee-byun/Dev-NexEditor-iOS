<effect 
	id="com.nexstreaming.kmsdk.lg.oldfilm.image_3000ms"
	type="title" 
	repeat="yes"
	intime="1600" 
	intimefirst="1600"
	outtime="800" 
	outtimelast="800"
	cycleTime="800"
	name="Oldfilm Image Effect 3000ms">

  	<texture id="frame" src="lg_photo_frame.png" />
	<texture id="noise" src="lg_noise.png" animated="4 2 10" />
    <texture id="video1" video="1" />

	<animatedvalue id="frame" timingfunction="linear">
		<keyframe value="1" />
		<keyframe value="10" />
	</animatedvalue>

	<animatedvalue id="text_alpha" timingfunction="linear">
		<keyframe value="1" />
		<keyframe value="10" />
	</animatedvalue>

	<animatedvalue id="t" scope="whole" timingfunction="linear">
		<keyframe value="0" />
		<keyframe value="20" />
	</animatedvalue>
	
	<function id="glowfunc" type="simplexfractal" outputbias="0.6" outputscale="0.9" octaves="4" />
	<function id="glowfuncb" type="simplexfractal" outputbias="0.6" outputscale="0.6" octaves="5" />
	<function id="glowfuncc" type="simplexfractal" outputbias="0.6" outputscale="0.6" octaves="7" />
	<function id="swingfunc" type="simplexfractal" inputscale="1 1 0.2" inputbias="30 20 10" outputscale="10" />
	<function id="swingfuncb" type="simplexfractal" inputscale="1 1 0.18" inputbias="20 50 44" outputscale="10" />
	<function id="swingfuncc" type="simplexfractal" inputscale="1 1 0.2" inputbias="30 20 10" outputscale="30" />

	<projection type="perspective" fov="45" aspect="1.777777" near="0.01" far="60000">
		<scale y="-1">
		  	<translate offset="0 0 -870">
		  		<translate offset="@swingfunc(@r.x @r.y @t) @swingfuncb(@r.x @r.y @t)">
					<style alpha="@glowfunc(@r.x @r.y @t)" >
						<rect bounds="-630 -350 630 350" texture="@video1" />
					</style>
				</translate>

		        <translate offset="-645 0">
		          <rect bounds="-5 -360 5 360" color="#000000" />
		        </translate>
		        <translate offset="645 0">
		          <rect bounds="-5 -360 5 360" color="#000000" />
		        </translate>
		        <translate offset="0 -365">
		          <rect bounds="-640 -5 640 5" color="#000000" />
		        </translate>
		        <translate offset="0 365">
		          <rect bounds="-640 -5 640 5" color="#000000" />
		        </translate>


				<style alpha="0.5" animframe="@frame">
					<rect bounds="-640 -360 640 360" texture="@noise" />
				</style>
				<rect bounds="-640 -360 640 360" texture="@frame" />

		 	</translate>
		</scale>
	</projection>
</effect>