<effect 
  id="com.nexstreaming.kmsdk.lg.oldfilm.opening" 
	type="title" 
	repeat="yes"
	intime="1600" 
	intimefirst="1600"
	outtime="800" 
	outtimelast="800"
	cycleTime="800"
  name="Old Film Opening">
	

  <texture id="frame" src="lg_photo_frame.png" />
	<texture id="noise" src="lg_noise.png" animated="4 2 10" />
  <texture id="video1" video="1" />
   		
	<animatedvalue id="frame" timingfunction="linear">
		<keyframe value="1" />
		<keyframe value="10" />
	</animatedvalue>

	<animatedvalue id="text_alpha" timingfunction="linear" scope="whole"  >
    <part type="in">
      <keyframe time="0" value="0" />
      <keyframe time="0.2" value="0.95" />
      <keyframe time="0.9" value="0.95" />
      <keyframe time="1" value="0.95" />
    </part>
    <part type="mid">
      <keyframe time="0" value="0.95" />
      <keyframe time="0.4" value="0.95" />
      <keyframe time="0.6" value="0" />
      <keyframe time="1" value="0" />
    </part>
    <part type="out">
      <keyframe time="1" value="0" />
    </part>
	</animatedvalue>

  <animatedvalue id="anim_1" timingfunction="ease-in">
    <part type="in">
      <keyframe time="0" value="640 360" />
       <keyframe time="0.2" value="640 360" />
       <keyframe time="0.8" value="-640 360" />
      <keyframe time="1" value="-640 360" />
    </part>
    <part type="mid">
      <keyframe value="-640 360" />
    </part>
    <part type="out">
      <keyframe value="-640 360" />
    </part>
  </animatedvalue>
  	
  <projection type="perspective" fov="45" aspect="1.777777" near="0.01" far="60000">
    <scale y="-1">
      <translate offset="-640 -360 -870">
        <translate offset="@anim_1">
          <translate offset="0 0">
            <!-- Group -->
              <translate offset="0 0">
                <rect bounds="-640 -360 640 360" texture="@video1" />
          	    <style alpha="0.5" animframe="@frame">
        					<rect bounds="-640 -360 640 360" texture="@noise" />
        				</style>
                <rect bounds="-640 -360 640 360" texture="@frame" />
              </translate>
              <translate offset="1280 0">
                <rect bounds="-640 -360 640 360" texture="@video1" />
        				<style alpha="0.5" animframe="@frame">
		        			<rect bounds="-640 -360 640 360" texture="@noise" />
        				</style>
                <rect bounds="-640 -360 640 360" texture="@frame" />
              </translate>
            <!-- end Group -->
          </translate>
        </translate>
      </translate>
    </scale>
  </projection>
</effect>