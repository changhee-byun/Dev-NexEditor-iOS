<effect 
	id="com.nexstreaming.kmsdk.lg.sports.flash_slow" 
	type="title" 
	repeat="yes"
	intime="1600" 
	intimefirst="1600"
	outtime="800" 
	outtimelast="800"
	cycleTime="800"
	name="Sports Flash Slow">

  <texture id="video1" video="1" />
    
  <animatedvalue id="slide" scope="whole">
    <keyframe value="20 0" />
    <keyframe value="-30 0" />
  </animatedvalue>

  <animatedvalue id="move" scope="whole" timingfunction="linear">
    <keyframe value="468" />
    <keyframe value="350" />
  </animatedvalue>

  <animatedvalue id="vscale" scope="whole" timingfunction="linear">
    <keyframe value="1.3" />
    <keyframe value="3" />
    <keyframe value="2" />
  </animatedvalue>

  <animatedvalue id="videoscale" scope="whole" timingfunction="linear">
    <keyframe time="0" value="1" />
    <keyframe time="0.001" value="3" />

    <keyframe time="0.1" value="3" />
    <keyframe time="0.101" value="2" />

    <keyframe time="0.3" value="2" />
    <keyframe time="0.301" value="2.5" />

    <keyframe time="0.35" value="2.5" />
    <keyframe time="0.351" value="2" />

    <keyframe time="0.4" value="2" />
    <keyframe time="0.401" value="3" />

    <keyframe time="0.45" value="3" />
    <keyframe time="0.451" value="2.5" />

    <keyframe time="0.5" value="2.5" />
    <keyframe time="0.501" value="1" />

    <keyframe time="0.7" value="1" />
    <keyframe time="0.701" value="3" />

    <keyframe time="0.75" value="3" />
    <keyframe time="0.751" value="2.5" />

    <keyframe time="0.9" value="2.5" />
    <keyframe time="0.901" value="1.8" />

    <keyframe time="0.999" value="1.8" />    
    <keyframe time="1" value="1" />
  </animatedvalue>

  <animatedvalue id="videocolor" scope="whole" timingfunction="linear">
    <keyframe time="0" value="1" />
    <keyframe time="0.001" value="2.3" />

    <keyframe time="0.1" value="2.3" />
    <keyframe time="0.101" value="1.7" />

    <keyframe time="0.3" value="1.7" />
    <keyframe time="0.301" value="2.2" />

    <keyframe time="0.34" value="2.2" />
    <keyframe time="0.341" value="1.8" />

    <keyframe time="0.43" value="1.8" />
    <keyframe time="0.431" value="1.5" />

    <keyframe time="0.65" value="1.4" />
    <keyframe time="0.651" value="1" />

    <keyframe time="0.7" value="1" />
    <keyframe time="0.701" value="2.1" />

    <keyframe time="0.9" value="2.1" />
    <keyframe time="0.901" value="1.8" />

    <keyframe time="0.95" value="1.8" />
    <keyframe time="0.951" value="1.2" />

    <keyframe time="0.999" value="1.2" />    
    <keyframe time="1" value="1" />
  </animatedvalue>
	
	<animatedvalue id="t" scope="whole" timingfunction="linear">
		<keyframe value="0" />
		<keyframe value="10" />
	</animatedvalue>
	
	<function id="glowfunc" type="simplexfractal" outputbias="0.1" outputscale="0.1" octaves="5" />
	<function id="glowfuncb" type="simplexfractal" outputbias="0.6" outputscale="0.6" octaves="4" />
	<function id="glowfuncc" type="simplexfractal" outputbias="0.1" outputscale="0.15" octaves="6" />

<projection type="perspective" fov="45" aspect="1.777777" near="0.01" far="60000">
  <scale y="-1">
    <translate offset="-640 -360 -870">
      <translate offset="640 360">
        <scale uniform="@videoscale">
          <sequence id="r" type="randmix" count="12" start="0.1" end="0.1" seed="3472">
            <style contrast="@glowfuncc(@r.x @r.y @t)" brightness="@glowfunc(@r.x @r.y @t)" >
              <rect bounds="-640 -360 640 360" texture="@video1" />
            </style>
          </sequence>
        </scale>
      </translate>

	  </translate>
	</scale>
	</projection>
</effect>
