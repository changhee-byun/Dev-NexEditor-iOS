<effect 
	id="com.nexstreaming.kmsdk.lg.sports.ghost2" 
	type="title" 
  intime="1500"
  outtime="0"
  intimefirst="1500"
  outtimelast="0"
  repeat="no"
  name="Sports Ghost2">
  
  <texture id="video1" video="1" />

  <animatedvalue id="ghost_slide1" timingfunction="linear" scope="whole">
    <keyframe time="0" value="680 360" />
    <keyframe time="0.05" value="680 360" />
    <keyframe time="0.1" value="600 360" />
    <keyframe time="0.13" value="590 360" />
    <keyframe time="0.17" value="640 360" />
    <keyframe time="0.18" value="360 360" />
    <keyframe time="0.4 " value="360 360" />

    <keyframe time="0.85 " value="360 360" />
    <keyframe time="0.90" value="590 360" />
    <keyframe time="0.95" value="700 360" />    
    <keyframe time="1" value="640 360" />
  </animatedvalue>

  <animatedvalue id="ghost_alpha1" timingfunction="ease-in-out" scope="whole">
    <keyframe time="0" value="0.5" />
    <keyframe time="0.05" value="0.4" />
    <keyframe time="0.1" value="0.7" />
    <keyframe time="0.23" value="0.3" />
    <keyframe time="0.25" value="0.7" />
    <keyframe time="0.35" value="0.35" />
    <keyframe time="0.38" value="0.7" />
    <keyframe time="0.85" value="0.6" />
    <keyframe time="0.9" value="0.43" />
    <keyframe time="0.95" value="0.34" />
    <keyframe time="0.98" value="0.6" />
    <keyframe time="1" value="0.6" />
  </animatedvalue>

  
  <animatedvalue id="clipangle" basis="clipindexshuffle" timingfunction="linear">
    <keyframe value="0" />
    <keyframe value="360" />
  </animatedvalue>
  


  <projection
    type="perspective"
    fov="45"
    aspect="1.777777"
    near="0.01"
    far="60000">
    <scale y="-1">
      <translate offset="-640 -360 -870">
        <translate offset="640 360">
          <rect bounds="-640 -360 640 360" texture="@video1" />
        </translate>

        <translate offset="@ghost_slide1">
        	<style alpha="@ghost_alpha1">
        		<scale uniform="1.5">
		          <rect bounds="-640 -360 640 360" texture="@video1" />
	          	</scale>
	        </style>
        </translate>
	                
      </translate>
    </scale>
  </projection>
</effect>
