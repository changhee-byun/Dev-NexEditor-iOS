<effect 
	id="com.nexstreaming.kmsdk.lg.sports.shift4" 
	type="title" 
  intime="1500"
  outtime="0"
  intimefirst="1500"
  outtimelast="0"
  repeat="no"
  name="Sports Shift4">
  
  <texture id="video1" video="1" />

  <animatedvalue id="zoom" scope="whole" timingfunction="linear" >
      <keyframe time="0" value="1.8" />
      <keyframe time="0.3" value="1.2" />
      <keyframe time="1" value="1.2" />
  </animatedvalue>
  
  <animatedvalue id="spin" scope="whole" timingfunction="linear">
      <keyframe value="0" />
      <keyframe value="8" />
  </animatedvalue>

  <animatedvalue id="shift" scope="whole" timingfunction="linear">
      <keyframe value="30 -30" />
      <keyframe value="-30 30" />
  </animatedvalue>

  <animatedvalue id="alpha_second" scope="whole" timingfunction="linear">
    <keyframe time="0" value="0" />
    <keyframe time="0.345" value="0" />
    <keyframe time="0.346" value="1" />    
    <keyframe time="1" value="1" />

  </animatedvalue>

  <animatedvalue id="move_1" scope="whole" timingfunction="ease-in-out">
    <keyframe time="0" value="700 1563" />
    <keyframe time="0.345" value="668 1092" />
  </animatedvalue>

  <animatedvalue id="scale_y1" scope="whole" timingfunction="ease-in-out">
    <keyframe time="0" value="0" />
    <keyframe time="0.345" value="0" />
    <keyframe time="0.346" value="1" />
    <keyframe time="0.812" value="76.5" />
  </animatedvalue>
  <animatedvalue id="scale_y2" scope="whole" timingfunction="ease-in-out">
    <keyframe time="0" value="0" />
    <keyframe time="0.345" value="0" />
    <keyframe time="0.346" value="1" />
    <keyframe time="0.812" value="265" />
  </animatedvalue>


  <animatedvalue id="sat" scope="whole" timingfunction="ease-in-out">
    <keyframe time="0" value="0" />
    <keyframe time="0.2" value="-0.3" />
  </animatedvalue>

  <animatedvalue id="cont" scope="whole" timingfunction="ease-in-out">
    <keyframe time="0" value="0" />
    <keyframe time="0.2" value="-0.2" />
  </animatedvalue>


  <projection
    type="perspective"
    fov="45"
    aspect="1.777777"
    near="0.01"
    far="60000">
    <scale y="-1">
      <translate offset="-640 -360 -870">
        <translate offset="640 360">
          <style saturation="@sat" contrast="@cont" >
            <scale uniform="@zoom">
              <rect bounds="-640 -360 640 360" texture="@video1" />
            </scale>
          </style>
        </translate>

         <translate offset="@move_1">
          <rotate axis="0 0 1" angle="-5">
            <translate offset="0 0">
              <!-- Group -->
                <translate offset="0.500 1.500">
                  <style alpha="0.25">
                    <rect bounds="-900 -750 900 750" color="0.106 0.376 1" />
                  </style>
                </translate>
                <translate offset="-0.500 -748.500">
                  <rect bounds="-900 -3 900 3" color="#ffffff" />
                </translate>
              <!-- end Group -->
            </translate>
          </rotate>
        </translate>

        <style alpha="@alpha_second">
          <translate offset="606 351">
            <rotate axis="0 0 1" angle="-5">
              <scale x="1" y="@scale_y1">
                <rect bounds="-900 -7 900 7" color="#ffffff" />
              </scale>
            </rotate>
          </translate>
          <translate offset="606 351">
            <style dest="stencil">
              <rotate axis="0 0 1" angle="-5">
                <scale x="1" y="@scale_y2">
                  <rect bounds="-900 -2 900 2" color="0.333 0.333 0.333" />
                </scale>
              </rotate>
            </style>
          </translate>
        </style>
        <style rendertest="stencil">
          <translate offset="640 360">
              <rect bounds="-641 -361 641 361" color="#000000" />
              <rect bounds="-640 -360 640 360" texture="@video1" />
          </translate>
        </style>

<!--
         <style dest="stencil">
          <translate offset="@mask_position">
          	<rotate angle="@spin">
               <rect bounds="-900 -500 900 500" color="#ffffff"  />
            </rotate>
          </translate>
        </style>

        <style rendertest="stencil">
          <translate offset="640 360">
            <translate offset="@slide">
              <scale uniform="@zoom">
                <style saturation="-0.3" contrast="-0.2" >
                  <rect bounds="-640 -360 640 360" texture="@video1" />
                </style>
              </scale>
            </translate>            
          </translate>
        </style>
-->	                
      </translate>
    </scale>
  </projection>
</effect>
