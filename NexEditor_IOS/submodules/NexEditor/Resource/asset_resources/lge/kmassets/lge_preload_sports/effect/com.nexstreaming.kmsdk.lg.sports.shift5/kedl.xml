<effect 
	id="com.nexstreaming.kmsdk.lg.sports.shift5" 
	type="title" 
  intime="1500"
  outtime="0"
  intimefirst="1500"
  outtimelast="0"
  repeat="no"
  name="Sports Shift5">
  
  <texture id="video1" video="1" />

  <animatedvalue id="slide" scope="whole">
    <keyframe value="20 0" />
    <keyframe value="-30 0" />
  </animatedvalue>
  
   <animatedvalue id="mask_position" timingfunction="linear" scope="whole">
      <keyframe time="0" value="780 300" />
	    <keyframe time="0.3" value="780 300" />
      <keyframe time="0.7" value="780 1300" />
      <keyframe time="1" value="780 1300" />
  </animatedvalue>  
 
  <animatedvalue id="zoom" scope="whole" timingfunction="linear" >
      <keyframe time="0" value="1.8" />
      <keyframe time="0.3" value="1.2" />
      <keyframe time="1" value="1.2" />
  </animatedvalue>
  
  <animatedvalue id="spin" scope="whole" timingfunction="linear">
      <keyframe value="0" />
      <keyframe value="8" />
  </animatedvalue>

  <animatedvalue id="shift" scope="whole" timingfunction="linear">
      <keyframe value="30 -30" />
      <keyframe value="-30 30" />
  </animatedvalue>

  <animatedvalue id="alpha_second" scope="whole" timingfunction="linear">
    <keyframe time="0" value="0" />
    <keyframe time="0.315" value="0" />
    <keyframe time="0.316" value="1" />    
    <keyframe time="1" value="1" />
  </animatedvalue>

  <animatedvalue id="anim_1" scope="whole" timingfunction="ease-in-out">
    <keyframe time="0" value="2009 372.571" />
    <keyframe time="0.315" value="1199.226 372.571" />
  </animatedvalue>
  <animatedvalue id="anim_2" scope="whole" timingfunction="ease-in-out">
    <keyframe time="0" value="0" />
    <keyframe time="0.3149" value="0" />    
    <keyframe time="0.315" value="1" />
    <keyframe time="0.646" value="100" />
  </animatedvalue>

  <animatedvalue id="anim_4" scope="whole" timingfunction="ease-in-out">
    <keyframe time="0" value="0" />
    <keyframe time="0.3149" value="0" />    
    <keyframe time="0.315" value="1" />
    <keyframe time="0.646" value="397" />
  </animatedvalue>

  <projection
    type="perspective"
    fov="45"
    aspect="1.777777"
    near="0.01"
    far="60000">
    <scale y="-1">
      <translate offset="-640 -360 -870">
        <translate offset="640 360">
          <rect bounds="-640 -360 640 360" texture="@video1" />
        </translate>

        <translate offset="@anim_1">
          <translate offset="0 0">
            <!-- Group -->
              <translate offset="-493 107.429">
                <rotate axis="0 0 1" angle="25">
                  <style alpha="0.35">
                    <rect bounds="-80.500 -787 1066.500 597" color="#80ce47" />
                  </style>
                </rotate>
              </translate>
              <translate offset="-527.782 -12.429">
                <rotate axis="0 0 1" angle="25">
                  <rect bounds="-3 -692 3 692" color="1 1 1" />
                </rotate>
              </translate>
            <!-- end Group -->
          </translate>
        </translate>

        <style alpha="@alpha_second">

          <translate offset="665 362">
            <rotate axis="0 0 1" angle="25">
              <scale x="@anim_2" y="1">
                <rect bounds="-8 -704 8 704" color="1 1 1" />
              </scale>
            </rotate>
          </translate>
          <translate offset="665 362">
            <style dest="stencil">
              <rotate axis="0 0 1" angle="25">
                <scale x="@anim_4" y="1">
                  <rect bounds="-2 -704 2 704" color="0.357 0.357 0.357" />
                </scale>
              </rotate>
            </style>
          </translate>
        </style>

        <style rendertest="stencil">
          <translate offset="640 360">
              <scale uniform="@zoom">
                <style saturation="-0.3" contrast="-0.2" >
                  <rect bounds="-641 -361 641 361" color="#000000" />
                  <rect bounds="-640 -360 640 360" texture="@video1" />
                </style>
              </scale>
          </translate>
        </style>

<!--
         <style dest="stencil">
          <translate offset="@mask_position">
          	<rotate angle="@spin">
               <rect bounds="-900 -500 900 500" color="#ffffff"  />
            </rotate>
          </translate>
        </style>

        <style rendertest="stencil">
          <translate offset="640 360">
            <translate offset="@slide">
              <scale uniform="@zoom">
                <style saturation="-0.3" contrast="-0.2" >
                  <rect bounds="-640 -360 640 360" texture="@video1" />
                </style>
              </scale>
            </translate>            
          </translate>
        </style>
-->	                
      </translate>
    </scale>
  </projection>
</effect>
