<effect
  id="com.nexstreaming.kmsdk.lg.sports.split"
  type="title"
  intime="1500"
  outtime="0"
  intimefirst="1500"
  outtimelast="0"
  repeat="no"
  name="Sports Split">
  <texture id="video1" video="1" />
  
  <animatedvalue id="slide" scope="whole">
    <keyframe value="20 0" />
    <keyframe value="-30 0" />
  </animatedvalue>
  <animatedvalue id="move" scope="whole" timingfunction="linear">
    <keyframe value="468" />
    <keyframe value="250" />
  </animatedvalue>
  <animatedvalue id="vscale" scope="whole" timingfunction="linear">
    <keyframe value="1.3" />
    <keyframe value="2.5" />
  </animatedvalue>
  <projection
    type="perspective"
    fov="45"
    aspect="1.777777"
    near="0.01"
    far="60000">
    <scale y="-1">
      <translate offset="-640 -360 -870">
        <translate offset="640 360">
          <rect bounds="-640 -360 640 360" texture="@video1" />
        </translate>
        <style dest="stencil">
          <trianglestrip>
            <point location="0 720" />
            <point location="1280 720" />
            <point location="0 660" />
            <point location="1280 @move" />
          </trianglestrip>
        </style>
        <style rendertest="stencil">
          <translate offset="640 360">
            <translate offset="@slide"><scale uniform="@vscale">
              <rect bounds="-640 -360 640 360" texture="@video1" />
            </scale></translate>
            <style alpha="0.2">
              <rect bounds="-640 -360 640 360" color="#6ab7df" />
            </style>
          </translate>
        </style>
      </translate>
    </scale>
  </projection>
</effect>