               <rect bounds="-900 -500 900 500" color="#ffffff"  />
            </rotate>
          </translate>
        </style>

        <style rendertest="stencil">
          <translate offset="360 640">
            <translate offset="@slide">
              <scale uniform="@zoom">
                <style saturation="-0.3" contrast="-0.2" >
                  <rect bounds="-360 -640 360 640" texture="@video1" />
                </style>
              </scale>
            </translate>            
          </translate>
        </style>
-->	                
      </translate>
    </scale>
  </projection>
</effect>
