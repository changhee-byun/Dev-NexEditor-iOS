  </animatedvalue>
  <animatedvalue id="anim_2" scope="whole" timingfunction="ease-in-out">
    <keyframe time="0" value="0" />
    <keyframe time="0.5149" value="0" />    
    <keyframe time="0.515" value="1" />
    <keyframe time="0.846" value="100" />
  </animatedvalue>

  <animatedvalue id="anim_4" scope="whole" timingfunction="ease-in-out">
    <keyframe time="0" value="0" />
    <keyframe time="0.5149" value="0" />    
    <keyframe time="0.515" value="1" />
    <keyframe time="0.846" value="397" />
  </animatedvalue>

  <projection type="perspective" fov="45" aspect="0.5625" near="0.01" far="60000">
    <scale y="-1">
      <translate offset="-360 -640 -1546.666667">
        <translate offset="360 640">
          <rect bounds="-360 -640 360 640" texture="@video1" />
        </translate>

        <translate offset="@anim_1">
          <translate offset="0 0">
            <!-- Group -->
              <translate offset="-493 107.429">
                <rotate axis="0 0 1" angle="25">
                  <style alpha="0.35">
                    <rect bounds="-80.500 -887 1066.500 697" color="#80ce47" />
                  </style>
                </rotate>
              </translate>
              <translate offset="-527.782 -12.429">
                <rotate axis="0 0 1" angle="25">
                  <rect bounds="-3 -792 3 792" color="1 1 1" />
                </rotate>
              </translate>
            <!-- end Group -->
          </translate>
        </translate>

        <style alpha="@alpha_second">

          <translate offset="360 650">
            <rotate axis="0 0 1" angle="25">
              <scale x="@anim_2" y="1">
                <rect bounds="-8 -804 8 804" color="1 1 1" />
              </scale>
            </rotate>
          </translate>
          <translate offset="360 650">
            <style dest="stencil">
              <rotate axis="0 0 1" angle="25">
                <scale x="@anim_4" y="1">
                  <rect bounds="-2 -804 2 804" color="0.357 0.357 0.357" />
                </scale>
              </rotate>
            </style>
          </translate>
        </style>

        <style rendertest="stencil">
          <translate offset="360 640">
              <scale uniform="@zoom">
                <style saturation="-0.3" contrast="-0.2" >
                  <rect bounds="-361 -641 361 641" color="#000000" />
                  <rect bounds="-360 -640 360 640" texture="@video1" />
                </style>
              </scale>
          </translate>
        </style>

