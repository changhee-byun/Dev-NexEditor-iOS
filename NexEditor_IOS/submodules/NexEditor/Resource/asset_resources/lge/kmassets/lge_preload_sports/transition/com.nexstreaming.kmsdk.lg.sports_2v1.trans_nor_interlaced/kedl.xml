<effect
  id="com.nexstreaming.kmsdk.lg.sports_2v1.trans_nor_interlaced"
  type="transition"
  effectoffset="100"
  videooverlap="100"
  minduration="500"
  maxduration="5000"
  defaultduration="2000"
  name="Sports Nor Interlaced">

  <texture id="video1" video="1" />
  <texture id="video2" video="2" />
  <texture id="tex_mask" src="mask_gradient_c.png" />

  <animatedvalue id="slide">
    <keyframe value="0 -2" />
    <keyframe value="0 2" />
  </animatedvalue>


  <animatedvalue id="video_alpha">
    <keyframe value="0" />
    <keyframe value="1" />
  </animatedvalue>

	<projection type="perspective" fov="45" aspect="2" near="0.01" far="60000">
		<scale y="-1">
			<translate offset="-720 -360 -870">
				<translate offset="720 360">
					<rect bounds="-720 -360 720 360" texture="@video1" />
					<style alpha="@video_alpha">
						<rect bounds="-720 -360 720 360" texture="@video2" />
					</style>
				</translate>
			</translate>
		</scale>
	</projection>

</effect>