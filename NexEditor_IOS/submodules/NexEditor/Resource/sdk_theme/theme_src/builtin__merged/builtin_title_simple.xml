<effect id="com.nexstreaming.kinemaster.builtin.title.simple" name="Subtitle" categorytitle="Basic Title Effects" type="title" icon="fx_text_subtitle.png" intime="1000" outtime="1000" repeat="no" >

	<userfield id="f_text" type="text">
		<fieldlabel locale="en" value="Title Text" />
	</userfield>

	<userfield id="f_color_text" type="color" default="#FFFFFF">
		<fieldlabel locale="en" value="Text Color" />
	</userfield>

	<userfield id="f_color_bg" type="color" default="#000000">
		<fieldlabel locale="en" value="Background Color" />
	</userfield>
	
	<userfield id="f_pos" type="selection" default="0 153 1280 0">
		<option value="0 153 1280 0">
			<fieldlabel locale="en" value="Bottom" />
		</option>
		<option value="0 436 1280 283">
			<fieldlabel locale="en" value="Middle" />
		</option>
		<option value="0 720 1280 567">
			<fieldlabel locale="en" value="Top" />
		</option>
	</userfield>

	<animatedvalue id="fade">
		<part type="in">
			<keyframe value="0" />
			<keyframe value="1" />
		</part>
		<part type="mid">
			<keyframe value="1" />
		</part>
		<part type="out">
			<keyframe value="1" />
			<keyframe value="0" />
		</part>
	</animatedvalue>

    <texture id="video1" video="1" />
    <texture 
    	id="text_2" 
    	text="%1" 
    	width="1920" 
    	height="230" 
    	srcfield="@f_text"  
    	textsize="180"  
    	textmargin="10"  
    	textalign="left"  
    	textvalign="center"
    	maxlines="2"  
    	autosize="false"  
    	typeface="asset:junction.ttf"  
    	fillcolor="@f_color_text"
    	bgcolor="@f_color_bg.r @f_color_bg.g @f_color_bg.b 0.5"
    	fill="true"   />
    	
    <projection type="perspective" fov="45" aspect="1.777777" near="0.01" far="60000">
        <translate offset="-640 -360 -870">
            <rect bounds="0 720 1280 0" texture="@video1" />
			<style alpha="@fade">
	            <rect bounds="@f_pos" texture="@text_2" />
	        </style>
        </translate>
    </projection>
    
</effect>