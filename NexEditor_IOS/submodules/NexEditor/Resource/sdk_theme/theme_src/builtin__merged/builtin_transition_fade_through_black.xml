<effect id="com.nexstreaming.kinemaster.builtin.transition.fadethroughcolor" 
	name="Fade Through Color" 
	icon="transition_fade_through_color.png" 
	categorytitle="Classic Transitions" 
	type="transition" 
	effectoffset="50" 
	videooverlap="0" 
	minduration="500" 
	maxduration="5000">
	<animatedvalue id="fade_in_amount">
		<keyframe time="0.5" value="0" />
		<keyframe time="1.0" value="1" />
	</animatedvalue>
	
	<animatedvalue id="fade_out_amount">
		<keyframe time="0.0" value="1" />
		<keyframe time="0.5" value="0" />
	</animatedvalue>
	
    <userfield id="f_color" type="color" default="#000000">
		<fieldlabel locale="en" value="Fade Color" />
	</userfield>
	
	<clear color="@f_color" />
	
	<style alpha="@fade_in_amount">
		<trianglestrip texture="@video_in">
			<point location="-1 -1"	texcoord="0 1" />
			<point location=" 1 -1"	texcoord="1 1" />
			<point location="-1  1"	texcoord="0 0" />
			<point location=" 1  1"	texcoord="1 0" />
		</trianglestrip>
	</style>
		
	<style alpha="@fade_out_amount">
		<trianglestrip texture="@video_out">
			<point location="-1 -1"	texcoord="0 1" />
			<point location=" 1 -1"	texcoord="1 1" />
			<point location="-1  1"	texcoord="0 0" />
			<point location=" 1  1"	texcoord="1 0" />
		</trianglestrip>
	</style>
</effect>	