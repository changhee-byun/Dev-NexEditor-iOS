<effect
  id="com.nexstreaming.kinemaster.builtin5.slideacrosstxt"
  type="title"
  intime="750"
  outtime="750"
  intimefirst="750"
  outtimelast="750"
  repeat="no"
  name="Slide Across"
  icon="slideacross.png"
  categorytitle="Basic Title Effects" >
  <animatedvalue id="anim_1" timingfunction="linear">
      <part type="in">
        <keyframe time="0" value="1545.268 541.178" />
        <keyframe time="1" value="435.113 541.178" timingfunction="ease-in" />
      </part>
      <part type="mid">
        <keyframe time="0" value="435.113 541.178" />
        <keyframe time="1" value="375.335 541.178" timingfunction="linear"  />
      </part>
      <part type="out">
        <keyframe time="0" value="375.335 541.178" />
        <keyframe time="1" value="-605.777 541.178" timingfunction="ease-out" />
      </part>
  </animatedvalue>
  <animatedvalue id="anim_2" timingfunction="linear">
      <part type="in">
        <keyframe time="0" value="-286.079 640.791" />
        <keyframe time="1" value="865.827 640.791" timingfunction="ease-in" />
      </part>
      <part type="mid">
        <keyframe time="0" value="865.827 640.791" />
        <keyframe time="1" value="916.116 640.791" timingfunction="linear" />
      </part>
      <part type="out">
        <keyframe time="0" value="916.116 640.791" />
        <keyframe time="1" value="1680.890 640.791" timingfunction="ease-out" />
      </part>
  </animatedvalue>

    <userfield id="f_text" type="text">
        <fieldlabel locale="en" value="First Line" />
    </userfield>
    
    <userfield id="f_color_linea" type="color" default="#FFFFFF">
    <fieldlabel locale="en" value="First Line" />
  </userfield>

    <userfield id="f_text2" type="text">
        <fieldlabel locale="en" value="Second Line" />
    </userfield>

  <userfield id="f_color_lineb" type="color" default="#FFFFFF">
    <fieldlabel locale="en" value="Second Line" />
  </userfield>

  <userfield id="f_slide_across_pos" type="selection" default="0 0 0 0">
    <option value="0 0 0 0">
      <fieldlabel locale="en" value="Bottom" />
    </option>
    <option value="0 -210 0 0">
      <fieldlabel locale="en" value="Middle" />
    </option>
    <option value="0 -450 0 0">
      <fieldlabel locale="en" value="Top" />
    </option>
  </userfield>


  <texture id="video1" video="1" />
  <texture
    id="text1"
    srcfield="@f_text"
    textsize="100"
    height="141"
    width="852"
    fillcolor="@f_color_linea"
    fill="true"
    textalign="center"
    textvalign="center"
    autosize="false"
    typeface="asset:lato-bold.ttf"  
    text="%1" 
    />
  <texture
    id="text2"
    srcfield="@f_text2"
    textsize="50"
    height="70"
    width="620"
    fillcolor="@f_color_lineb"
    fill="true"
    typeface="asset:lato-bold.ttf"  
    textalign="center"
    textvalign="center"
    autosize="false"
    text="%1" 
    />
  <projection
    type="perspective"
    fov="45"
    aspect="1.777777"
    near="0.01"
    far="60000">
    <scale y="-1">
      <translate offset="-640 -360 -870">
        <translate offset="640 360">
          <rect bounds="-640 -360 640 360" texture="@video1" />
        </translate>
        <translate offset="@f_slide_across_pos.x @f_slide_across_pos.y">
          <translate offset="@anim_1">
            <rect bounds="-323.351 -74.500 529.622 67.370" texture="@text1" />
          </translate>
          <translate offset="@anim_2">
            <rect bounds="-364.151 -58.874 255.982 11.443" texture="@text2" />
          </translate>
        </translate>
      </translate>
    </scale>
  </projection>
</effect>