<effect 
	id="com.nexstreaming.kinemaster.serene.accent" 
	name="Serene Accent"
	icon="theme_accent.png"
	theme="true"
	type="title" 
	intime="2000" 
	intimefirst="2000" 
	outtime="2000" 
	outtimelast="2000"
	cycletime="2000"  repeat="yes">
	
	
	<texture id="videoframe" video="1" />
		
	<texture id="bp4" src="blurpaper4.png" />
	<texture id="ltblur" src="ltblur.png" />
		
	<rect bounds="-1 1 1 -1" texture="@videoframe" />
	
	<animatedvalue id="slide" >
		<part type="in">
			<keyframe value="-5 -1 -2" />
			<keyframe value="0 0 0" />
		</part>
		<part type="mid">
			<keyframe value="0 0 0" />
		</part>
		<part type="out">
			<keyframe value="0 0 0" />
			<keyframe value="0 0 -2" />
		</part>
	</animatedvalue>
	
	<animatedvalue id="fade" >
		<part type="in">
			<keyframe value="0" />
			<keyframe value="1" />
		</part>
		<part type="mid">
			<keyframe value="1" />
		</part>
		<part type="out">
			<keyframe value="1" />
			<keyframe value="0" />
		</part>
	</animatedvalue>
	
	<animatedvalue id="bgspin" timingfunction="linear" scope="whole" >
		<keyframe value="-30" />
		<keyframe value="30" />
	</animatedvalue>
	
	<animatedvalue id="xslide" timingfunction="linear" >
		<keyframe value="-10" />
		<keyframe value="-5" />
	</animatedvalue>
	
	<animatedvalue id="xinv" >
		<part clip="even">
			<keyframe value="1" />
		</part>
		<part clip="odd">
			<keyframe value="-1" />
		</part>
	</animatedvalue>
	
	
	<projection type="perspective" aspect="1.77777" fov="45" top="1" near="1" far="30">
	
		<sequence id="inv" start="1" end="-1" count="2"><scale y="@inv" x="@inv">
	
			<scale x="@xinv">
			<translate offset="0 -1 0">
	
			<style alpha="@fade">
				<translate offset="@slide"><translate offset="-5 -4 -16">
					<translate offset="-4 -1"><scale x="16" y="3">
						<translate offset="0" repeat="2">
							<trianglestrip type="fan">
								<point location="-1 -1" color="@fade*0.74 @fade*0.86 @fade*0.85 @fade" />
								<point location="2.5 -1" color="0 0 0 0" />
								<point location="1.5 1" color="0 0 0 0" />
								<point location="-1 1.3" color="0 0 0 0" />
							</trianglestrip>
						</translate>
					</scale></translate>
				</translate></translate>
			</style>
			
			<translate offset="@xslide 0 -16.14"><rotate axis="0 1 0" angle="0">
				
				<translate offset="5 0 0" repeat="4">
				<sequence id="r" type="randmix" count="25" start="-5 -5 1 0" end="5 -1 0.3 360" seed="42985357">
					<translate offset="@r.x @r.y @r.z*15"><style alpha="@r.z">
						<rotate axis="0 1 0" angle="@bgspin">
							<style alpha="@fade"><rotate axis="0 1 0" angle="@r.w"><rect bounds="-0.85 0.5 0.85 -0.5" texture="@bp4" /></rotate></style>
						</rotate>
					</style></translate>
				</sequence>
				</translate>
								
			</rotate></translate>
			
			</translate>
			</scale>
		
		</scale></sequence>
		
	</projection>
	
	
</effect>
