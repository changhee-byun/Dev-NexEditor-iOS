<effect 
	id="com.nexstreaming.kinemaster.travel.ending" 
	name="Travel Ending"
	icon="theme_ending.png"
	theme="true"
	type="title" 
	intime="1800" 
	intimefirst="1500" 
	outtime="2000" 
	outtimelast="0">

	<texture id="videoframe" video="1" />
	<texture id="case" src="travel_case.png" />

	<rect bounds="-1 1 1 -1" texture="@videoframe" />

	<userfield id="f_text" type="text">
		<fieldlabel locale="en" value="Title Text" />
	</userfield>
	<texture id="title_text" text="%1" 
		srcfield="@f_text"
		typeface="asset:goudy_stm_italic.ttf" 
		textsize="120" 
		height="200"
		width="1200"
		fillcolor="#FFFFFF" 
		shadowoffset="0 0" shadowradius="12" shadowcolor="0 0 0 0.75"
		textmargin="12"
		textalign="right"
		maxlines="1"
		fill="true" shadow="true" />
		
	<animatedvalue id="baseslide">
		<part type="in">
			<keyframe value="-65" />
			<keyframe value="0" />
		</part>
		<keyframe value="0" />
	</animatedvalue>
	
	<animatedvalue id="caseslide">
		<part type="in">
			<keyframe value="-258" />
			<keyframe value="0" time="0.8" />
		</part>
		<keyframe value="0" />
	</animatedvalue>
	
	<animatedvalue id="textslide">
		<part type="in">
			<keyframe value="-80" />
			<keyframe value="0" />
		</part>
		<keyframe value="0" />
	</animatedvalue>
	
	<animatedvalue id="textfade">
		<part type="in">
			<keyframe value="0" />
			<keyframe value="1" />
		</part>
		<keyframe value="1" />
	</animatedvalue>
	
	<animatedvalue id="allfade">
		<part type="out">
			<keyframe value="1" />
			<keyframe value="0" />
		</part>
		<keyframe value="1" />
	</animatedvalue>

	<projection type="perspective" aspect="1.77777" fov="45" top="1" near="1" far="40">
		<translate offset="0 0 -21.69">
			<translate offset="-16 -9">
			<scale uniform="0.025">
						
					<style alpha="@allfade">
						<style alpha="@textfade">
							<translate offset="0 @baseslide">
								<rect bounds="0 58 1280 65" color="#FFFFFF" />
								<trianglestrip>
									<point location="0 0" color="0 0 0 0" />
									<point location="1280 0" color="0 0 0 0" />
									<point location="0 58" color="0.8 0.8 0.8 0.8" />
									<point location="1280 58" color="0.8 0.8 0.8 0.8" />
								</trianglestrip>
							</translate>
						</style>
						
						<translate offset="0 @caseslide">
							<translate offset="1060 40">
								<scale uniform="0.8">
									<rect bounds="0 193 256 0" texture="@case" />
								</scale>
							</translate>
						</translate>
	
						<style alpha="@textfade">
							<translate offset="@textslide 0">
								<rect location="1045 60" height="250" width="950" anchor="right bottom" texture="@title_text" scalemode="fit" />
							</translate>
						</style>
					</style>

			</scale>
			</translate>
		</translate>
	</projection>	
	
</effect>