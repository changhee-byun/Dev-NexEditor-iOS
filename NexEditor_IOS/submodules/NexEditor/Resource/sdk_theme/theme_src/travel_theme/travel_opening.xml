<effect 
	id="com.nexstreaming.kinemaster.travel.opening" 
	name="Travel Opening"
	icon="theme_open.png"
	theme="true"
	type="title" 
	intime="2500" 
	intimefirst="2500"
	outtime="2000" 
	outtimelast="0">

	<texture id="videoframe" video="1" />
	<texture id="balloon" src="travel_balloon.png" />
	
	<userfield id="f_text" type="text">
		<fieldlabel locale="en" value="Title Text" />
	</userfield>
	<texture id="title_text" text="%1" 
		srcfield="@f_text"
		typeface="asset:goudy_stm_italic.ttf" 
		textsize="150" 
		height="300"
		width="1200"
		fillcolor="#FFFFFF" 
		shadowoffset="0 0" shadowradius="12" shadowcolor="0 0 0 0.75"
		textmargin="12"
		textalign="center"
		maxlines="2"
		fill="true" shadow="true" />
	
	<rect bounds="-1 1 1 -1" texture="@videoframe" />
	
	<animatedvalue id="by" scope="whole" timingfunction="linear" noisefunction="fractal" noise="perlin-simplex" noisesamplebias="65" noisesamplescale="6" noiseoctaves="3" >
		<keyframe value="-30" />
		<keyframe value="30" />
	</animatedvalue>
	
	<animatedvalue id="bx" scope="whole"  timingfunction="linear" noisefunction="fractal" noise="perlin-simplex" noisesamplebias="0" noisesamplescale="4" noiseoctaves="3" >
		<keyframe value="-40" />
		<keyframe value="40" />
	</animatedvalue>
	
	<animatedvalue id="bslide" timingfunction="linear" >
		<part type="in"> 
			<keyframe value="0 -600" />
			<keyframe value="0 150" timingfunction="ease-out" />
		</part>
		<part type="mid"> 
			<keyframe value="0 150" />
		</part>
		<part type="out"> 
			<keyframe value="0 150" />
			<keyframe value="0 800" timingfunction="ease-in" />
		</part>
	</animatedvalue>
	
	<projection type="perspective" aspect="1.77777" fov="45" top="1" near="1" far="40">
		<translate offset="0 0 -21.69">
			<scale uniform="0.025">
				<translate offset="@bslide">
					<translate offset="@bx @by">
						
						<scale uniform="0.8">
							<rect bounds="-132 189 132 -188" texture="@balloon" />
						</scale>
											
					</translate>

					<rect location="0 -200" height="250" width="1000" anchor="top center" texture="@title_text" scalemode="fit" />
					
				</translate>
			</scale>
		</translate>
	</projection>	
	
</effect>
