<effect 
	id="com.nexstreaming.kinemaster.travel.transition"
	name="Travel Transition"
	icon="theme_transition.png"
	theme="true"
	type="transition" 
	minduration="500" 
	maxduration="3000" 
	effectoffset="100" 
	effectoverlap="100">
	
	<texture id="video_out" video="1" />
	<texture id="video_in" video="2" />
	<texture id="cloudmask" src="planeclouds_stencil.png" />
	<texture id="cloudoverlay" src="planeclouds.png" />

	<animatedvalue id="angle" basis="clipindexshuffle">
		<keyframe value="90" />
		<keyframe value="0" />
		<keyframe value="360" />
	</animatedvalue>
	
	<animatedvalue id="slide" timingfunction="ease-in">
		<keyframe value="-0.958" />
		<keyframe value="0.958" />
	</animatedvalue>

	<projection type="perspective" aspect="1.77777" fov="45" top="1" near="1" far="40">
		<translate offset="0 0 -21.69">
		
				<rect bounds="-16 9 16 -9" texture="@video_out" />
				
				<rotate angle="@angle">
					<translate offset="@slide*23.18">
						<scale x="0.5234" y="1">
							<style dest="stencil">
								<rect bounds="-16 -32 16 -9" texture="@cloudmask" />
								<rect bounds="-16 9 16 -9" texture="@cloudmask" />
								<rect bounds="-16 9 16 32" texture="@cloudmask" />
								<rect bounds="-100 32 -16 -32" color="1 1 1" />
							</style>
						</scale>
					</translate>
				</rotate>
				
				<style rendertest="stencil">
					<rect bounds="-16 9 16 -9" texture="@video_in" />
				</style>
				
				<rotate angle="@angle">
					<translate offset="@slide*23.18">
						<scale x="0.5234" y="1">
							<rect bounds="-16 -32 16 -9" texture="@cloudoverlay" />
							<rect bounds="-16 9 16 -9" texture="@cloudoverlay" />
							<rect bounds="-16 9 16 32" texture="@cloudoverlay" />
						</scale>
					</translate>
				</rotate>
				
		</translate>
	</projection>
	
</effect>
